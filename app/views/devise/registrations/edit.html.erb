<%= render "devise/shared/auth_card", title: "Account settings", subtitle: "Update your email and password" do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-900" %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "mt-2 block w-full rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="mt-2 text-xs text-amber-700">
          Currently waiting confirmation for: <span class="font-medium"><%= resource.unconfirmed_email %></span>
        </p>
      <% end %>
    </div>

    <div>
      <div class="flex items-baseline justify-between">
        <%= f.label :password, class: "block text-sm font-medium text-gray-900" %>
        <span class="text-xs text-gray-500">Leave blank if unchanged</span>
      </div>
      <%= f.password_field :password,
                           autocomplete: "new-password",
                           class: "mt-2 block w-full rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if @minimum_password_length %>
        <p class="mt-2 text-xs text-gray-500">Minimum <%= @minimum_password_length %> characters</p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-900" %>
      <%= f.password_field :password_confirmation,
                           autocomplete: "new-password",
                           class: "mt-2 block w-full rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <div class="flex items-baseline justify-between">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-900" %>
        <span class="text-xs text-gray-500">Required to save changes</span>
      </div>
      <%= f.password_field :current_password,
                           autocomplete: "current-password",
                           class: "mt-2 block w-full rounded-xl border border-gray-300 bg-white px-3 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.submit "Update", class: "w-full rounded-full bg-indigo-700 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-600" %>
    </div>
  <% end %>

  <div class="mt-8 border-t border-gray-200 pt-6">
    <h2 class="text-sm font-semibold text-gray-900">Danger zone</h2>
    <p class="mt-1 text-sm text-gray-600">This permanently deletes your account.</p>
    <div class="mt-3">
      <%= button_to "Cancel my account",
                    registration_path(resource_name),
                    method: :delete,
                    data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                    class: "w-full rounded-full border border-red-300 bg-red-50 px-4 py-2.5 text-sm font-semibold text-red-700 hover:bg-red-100" %>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Back", root_path, class: "text-sm text-gray-700 hover:text-gray-900" %>
  </div>
<% end %>
