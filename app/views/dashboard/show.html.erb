<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Welcome back! üëã</h1>
    <p class="mt-1 text-sm text-gray-600">Signed in as <span class="font-medium"><%= current_user.email %></span></p>
  </div>

  <!-- Main Stats Cards -->
  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4 mb-8">
    <%= link_to watchlist_path, class: "block" do %>
      <div class="rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 p-5 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-sm opacity-90">Watchlist</div>
            <div class="mt-1 text-3xl font-bold"><%= @watchlist_count %></div>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 opacity-80">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
          </svg>
        </div>
      </div>
    <% end %>

    <%= link_to lists_path, class: "block" do %>
      <div class="rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 p-5 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-sm opacity-90">Custom Lists</div>
            <div class="mt-1 text-3xl font-bold"><%= @lists_count %></div>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 opacity-80">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
        </div>
      </div>
    <% end %>

    <div class="rounded-xl bg-gradient-to-br from-pink-500 to-pink-600 p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm opacity-90">Total Watched</div>
          <div class="mt-1 text-3xl font-bold"><%= @total_movies_watched %></div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 opacity-80">
          <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>
      </div>
      <%= link_to watched_path, class: "mt-3 inline-block text-sm font-medium text-white hover:text-pink-100 transition-colors" do %>
        <span class="flex items-center gap-1">
          View History
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>
        </span>
      <% end %>
    </div>

    <div class="rounded-xl bg-gradient-to-br from-amber-500 to-amber-600 p-5 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm opacity-90">Movie Likes</div>
          <div class="mt-1 text-3xl font-bold"><%= @movie_likes_count %></div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 opacity-80">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
      </div>
      <%= link_to liked_path, class: "mt-3 inline-block text-sm font-medium text-white hover:text-amber-100 transition-colors" do %>
        <span class="flex items-center gap-1">
          View Likes
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
          </svg>
        </span>
      <% end %>
    </div>

    <%= link_to actors_path, class: "block" do %>
      <div class="rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 p-5 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 cursor-pointer">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-sm opacity-90">Favorite Actors</div>
            <div class="mt-1 text-3xl font-bold"><%= @favorite_actors_count %></div>
          </div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 opacity-80">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
          </svg>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Activity Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <div class="flex items-center">
        <div class="rounded-full bg-blue-100 p-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-blue-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-sm text-gray-500">This Month</div>
          <div class="text-2xl font-bold text-gray-900"><%= @this_month_viewings %> watched</div>
        </div>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <div class="flex items-center">
        <div class="rounded-full bg-green-100 p-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-green-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-sm text-gray-500">This Week</div>
          <div class="text-2xl font-bold text-gray-900"><%= @this_week_viewings %> watched</div>
        </div>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <div class="flex items-center">
        <div class="rounded-full bg-purple-100 p-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-purple-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 0 0 6 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0 1 18 16.5h-2.25m-7.5 0h7.5m-7.5 0-1 3m8.5-3 1 3m0 0 .5 1.5m-.5-1.5h-9.5m0 0-.5 1.5m.75-9 3-3 2.148 2.148A12.061 12.061 0 0 1 16.5 7.605" />
          </svg>
        </div>
        <div class="ml-4">
          <div class="text-sm text-gray-500">All Time</div>
          <div class="text-2xl font-bold text-gray-900"><%= @viewings_count %> viewings</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recently Watched Movies -->
  <% if @recent_viewings.any? %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">Recently Watched</h2>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
        <% @recent_viewings.each do |viewing| %>
          <% movie = viewing.movie %>
          <%= link_to movie_path(movie), class: "group block" do %>
            <div class="rounded-lg overflow-hidden shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              <% if movie.poster_path.present? %>
                <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                     alt="<%= movie.title %>"
                     class="w-full aspect-[2/3] object-cover" />
              <% else %>
                <div class="w-full aspect-[2/3] bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                  </svg>
                </div>
              <% end %>
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-opacity"></div>
            </div>
            <p class="mt-2 text-sm font-medium text-gray-900 truncate"><%= movie.title %></p>
            <p class="text-xs text-gray-500"><%= time_ago_in_words(viewing.created_at) %> ago</p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Watchlist Preview -->
  <% if @recent_watchlist.any? %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">Your Watchlist</h2>
        <%= link_to "View All ‚Üí", watchlist_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
        <% @recent_watchlist.each do |watchlist_item| %>
          <% movie = watchlist_item.movie %>
          <%= link_to movie_path(movie), class: "group block relative" do %>
            <div class="rounded-lg overflow-hidden shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              <% if movie.poster_path.present? %>
                <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                     alt="<%= movie.title %>"
                     class="w-full aspect-[2/3] object-cover" />
              <% else %>
                <div class="w-full aspect-[2/3] bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                  </svg>
                </div>
              <% end %>
              <div class="absolute top-2 right-2 bg-indigo-600 text-white rounded-full p-1.5 shadow-lg">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                </svg>
              </div>
            </div>
            <p class="mt-2 text-sm font-medium text-gray-900 truncate"><%= movie.title %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Favorite Actors -->
  <% if @favorite_actors.any? %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">Your Favorite Actors</h2>
        <%= link_to "Browse All ‚Üí", actors_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
        <% @favorite_actors.each do |favorite_actor| %>
          <% actor = favorite_actor.actor %>
          <% actor_details = @actor_details_map[actor.id] %>
          <% profile_path = actor_details&.dig('profile_path') %>
          <%= link_to actor_path(actor), class: "group block text-center" do %>
            <div class="rounded-full overflow-hidden shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-200 mx-auto w-32 h-32">
              <% if profile_path.present? %>
                <img src="https://image.tmdb.org/t/p/w500<%= profile_path %>"
                     alt="<%= actor.name %>"
                     class="w-full h-full object-cover" />
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-emerald-200 to-emerald-300 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-emerald-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                  </svg>
                </div>
              <% end %>
            </div>
            <p class="mt-3 text-sm font-medium text-gray-900 truncate"><%= actor.name %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Lists Overview -->
  <% if @recent_lists.any? %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">üìù Your Recent Lists</h2>
        <%= link_to "View All ‚Üí", lists_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% @recent_lists.each do |list| %>
          <%= link_to list_path(list), class: "block group" do %>
            <div class="rounded-xl bg-white border-2 border-gray-200 p-5 hover:border-indigo-400 hover:shadow-lg transition-all duration-200">
              <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors"><%= list.name %></h3>
              <p class="text-sm text-gray-600 mb-3 line-clamp-2"><%= list.description.presence || "No description" %></p>
              <div class="flex items-center gap-3 text-sm">
                <div class="flex items-center gap-1.5 text-indigo-600">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                  </svg>
                  <span class="font-medium"><%= pluralize(list.movies.count, 'movie') %></span>
                </div>
                <span class="text-gray-400">‚Ä¢</span>
                <div class="flex items-center gap-1.5 text-gray-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  <span><%= time_ago_in_words(list.updated_at) %> ago</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <%= link_to search_path, class: "block" do %>
        <div class="rounded-xl bg-white border-2 border-gray-200 p-4 hover:border-indigo-400 hover:shadow-md transition-all duration-200 text-center group">
          <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-indigo-100 flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </div>
          <p class="text-sm font-medium text-gray-900">Search Movies</p>
        </div>
      <% end %>

      <%= link_to new_list_path, class: "block" do %>
        <div class="rounded-xl bg-white border-2 border-gray-200 p-4 hover:border-purple-400 hover:shadow-md transition-all duration-200 text-center group">
          <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-purple-100 flex items-center justify-center group-hover:bg-purple-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-purple-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
          </div>
          <p class="text-sm font-medium text-gray-900">Create List</p>
        </div>
      <% end %>

      <%= link_to movies_path, class: "block" do %>
        <div class="rounded-xl bg-white border-2 border-gray-200 p-4 hover:border-pink-400 hover:shadow-md transition-all duration-200 text-center group">
          <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-pink-100 flex items-center justify-center group-hover:bg-pink-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-pink-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
            </svg>
          </div>
          <p class="text-sm font-medium text-gray-900">Browse Movies</p>
        </div>
      <% end %>

      <%= link_to shows_path, class: "block" do %>
        <div class="rounded-xl bg-white border-2 border-gray-200 p-4 hover:border-emerald-400 hover:shadow-md transition-all duration-200 text-center group">
          <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-emerald-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125Z" />
            </svg>
          </div>
          <p class="text-sm font-medium text-gray-900">Browse Shows</p>
        </div>
      <% end %>
    </div>
