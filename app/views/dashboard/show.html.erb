<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <p class="mt-1 text-sm text-gray-600">Signed in as <span class="font-medium"><%= current_user.email %></span></p>

  <div class="mt-6 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
    <div class="rounded-xl bg-white border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Watchlist</div>
      <div class="mt-1 text-2xl font-semibold text-gray-900"><%= @watchlist_count %></div>
      <div class="mt-3">
        <%= link_to "View", watchlist_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Custom Lists</div>
      <div class="mt-1 text-2xl font-semibold text-gray-900"><%= @lists_count %></div>
      <div class="mt-3">
        <%= link_to "View", lists_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Movie Likes</div>
      <div class="mt-1 text-2xl font-semibold text-gray-900"><%= @movie_likes_count %></div>
      <div class="mt-3">
        <span class="text-sm text-gray-400">Shared</span>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Viewings</div>
      <div class="mt-1 text-2xl font-semibold text-gray-900"><%= @viewings_count %></div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-4">
      <div class="text-sm text-gray-500">Favorite actors</div>
      <div class="mt-1 text-2xl font-semibold text-gray-900"><%= @favorite_actors_count %></div>
      <div class="mt-3">
        <%= link_to "Browse", actors_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
    </div>
  </div>

  <!-- Recent Lists Overview -->
  <% if @recent_lists.any? %>
    <div class="mt-8">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-gray-900">Your Recent Lists</h2>
        <%= link_to "View All →", lists_path, class: "text-sm font-medium text-indigo-700 hover:text-indigo-900" %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% @recent_lists.each do |list| %>
          <div class="rounded-xl bg-white border border-gray-200 p-4 hover:border-indigo-300 transition">
            <%= link_to list_path(list) do %>
              <h3 class="font-semibold text-gray-900 mb-1"><%= list.name %></h3>
              <p class="text-xs text-gray-500 mb-2 line-clamp-2"><%= list.description.presence || "No description" %></p>
              <div class="flex items-center gap-2 text-xs text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>
                <%= pluralize(list.movies.count, 'movie') %>
                <span class="text-gray-400">•</span>
                <span>Updated <%= time_ago_in_words(list.updated_at) %> ago</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-8">
    <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "inline-flex items-center rounded-full bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-700" %>
  </div>
</div>
