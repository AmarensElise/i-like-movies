<div class="max-w-6xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to :back, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium" do %>
      <span class="mr-1">←</span>
      Back
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="md:flex">
      <div class="md:w-1/3 lg:w-1/4 p-6 flex justify-center items-start">
        <% poster_path = @show_details&.dig('poster_path') || @show.poster_path %>
        <% if poster_path.present? %>
          <img src="https://image.tmdb.org/t/p/w300<%= poster_path %>" alt="<%= @show.name %>" class="w-48 rounded-lg object-cover border-4 border-gray-200 shadow-lg" />
        <% else %>
          <div class="w-48 h-72 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0 border-4 border-gray-200 shadow-lg">
            <span class="text-gray-500">No Image</span>
          </div>
        <% end %>
      </div>

      <div class="p-6 md:w-2/3 lg:w-3/4">
        <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @show.name %></h1>

        <% start_year = @show.start_year %>
        <% end_year = @show.end_year %>
        <% if start_year.present? %>
          <p class="text-gray-600 mb-4">
            <%= start_year %><%= end_year && end_year != start_year ? "–#{end_year}" : "" %>
          </p>
        <% end %>

        <% overview = @show_details&.dig('overview') %>
        <% if overview.present? %>
          <p class="text-gray-700 mb-6"><%= overview %></p>
        <% end %>

        <div class="flex flex-wrap gap-2 mb-6">
          <% genres = @show_details&.dig('genres') || [] %>
          <% genres.each do |g| %>
            <span class="inline-block bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
              <%= g['name'] %>
            </span>
          <% end %>
        </div>

        <div class="flex flex-wrap gap-3">
          <%= link_to cast_show_path(@show), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-full hover:bg-indigo-400" do %>
            See cast
          <% end %>
        </div>

        <div class="mt-6">
          <%= render "movies/availability", watch_providers: @watch_providers %>
        </div>
      </div>
    </div>
  </div>
</div>
