<div class="max-w-6xl mx-auto p-6">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to '/', class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back
    <% end %>
  </div>

  <div class="flex justify-end mb-4">
    <%= render "movie_actions", movie: @movie %>
  </div>

  <!-- Movie Details -->
  <div class="bg-white rounded-lg overflow-hidden mb-8">

    <div class="md:flex">
      <!-- Movie Poster -->
      <div class="md:w-1/3 lg:w-1/4">
        <% if @movie.poster_path.present? %>
          <img src="https://image.tmdb.org/t/p/w500<%= @movie.poster_path %>" alt="<%= @movie.title %>" class="w-full h-auto object-cover shadow-lg rounded-xl" />
        <% else %>
          <div class="w-full h-72 md:h-full bg-gray-200 flex items-center justify-center">
            <span class="text-gray-500">No Poster Available</span>
          </div>
        <% end %>
      </div>

      <!-- Movie Info -->
      <div class="p-6 md:w-2/3 lg:w-3/4">
        <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @movie.title %> </h1>

        <div class="mb-6">
          <span class="text-gray-600">
            <% if @movie.release_date.present? %>
              <%= @movie.release_date.strftime('%B %d, %Y') %>
            <% else %>
              Release Date Unknown
            <% end %>
          </span>
        </div>

        <!-- Additional movie info from TMDB -->
        <div class="mb-6">
          <h3 class="text-lg font-medium text-gray-800 mb-2">Overview</h3>
          <p class="text-gray-700">
            <%= @movie_details&.dig('overview') || "No overview available" %>
          </p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-800 mb-2">Details</h3>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-black font-medium">Runtime:</p>
              <p class="text-gray-800">
                <% if runtime = @movie_details&.dig('runtime') %>
                  <%= "#{runtime / 60}h #{runtime % 60}m" %>
                <% else %>
                  Unknown
                <% end %>
              </p>            </div>
            <div>
              <p class="text-black font-medium">Budget:</p>
              <p class="text-gray-800"><%= number_to_currency(@movie_details&.dig('budget'), precision: 0) || "Unknown" %></p>
            </div>
            <div>
              <p class="text-black font-medium">Revenue:</p>
              <p class="text-gray-800"><%= number_to_currency(@movie_details&.dig('revenue'), precision: 0) || "Unknown" %></p>
            </div>
            <div>
              <p class="text-black font-medium">Vote Average:</p>
              <p class="text-gray-800"><%= "#{@movie_details&.dig('vote_average')&.round(1)}" || "Unknown" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Watch Providers Section -->
  <div class="mb-8">
    <%= render "availability", watch_providers: @watch_providers %>
  </div>

  <!-- Cast Section -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Cast</h2>

    <% if @cast.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @cast.each do |role| %>
          <div class="bg-white rounded-lg shadow">
            <%= render 'actors/actor', actor: role.actor %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-100 rounded-lg p-4 text-center">
        <p class="text-gray-600">No cast information available</p>
      </div>
    <% end %>
  </div>
</div>
