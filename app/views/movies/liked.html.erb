<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">❤️ Liked Movies</h1>
    <p class="mt-2 text-sm text-gray-600">Movies you've shared your appreciation for</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 gap-4 mb-8">
    <div class="rounded-xl bg-gradient-to-br from-pink-500 to-pink-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">Movies Liked</div>
      <div class="mt-1 text-3xl font-bold"><%= @total_movies_liked %></div>
    </div>

    <div class="rounded-xl bg-gradient-to-br from-red-500 to-red-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">Total Likes Given</div>
      <div class="mt-1 text-3xl font-bold"><%= @total_likes %></div>
    </div>
  </div>

  <!-- Liked Movies Grid -->
  <% if @liked_movies.any? %>
    <div class="grid grid-cols-1 gap-6">
      <% @liked_movies.each do |movie| %>
        <% user_likes = movie.movie_likes.where(user: current_user).order(created_at: :desc) %>
        <div class="rounded-xl bg-white border-2 border-gray-200 overflow-hidden hover:border-pink-300 hover:shadow-lg transition-all duration-200">
          <div class="md:flex">
            <!-- Movie Poster -->
            <div class="md:w-48 md:flex-shrink-0">
              <%= link_to movie_path(movie), class: "block" do %>
                <% if movie.poster_path.present? %>
                  <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                       alt="<%= movie.title %>"
                       class="w-full h-full object-cover md:h-72" />
                <% else %>
                  <div class="w-full h-72 bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-gray-400">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                    </svg>
                  </div>
                <% end %>
              <% end %>
            </div>

            <!-- Movie Details and Likes -->
            <div class="p-6 flex-1">
              <%= link_to movie_path(movie), class: "group" do %>
                <h3 class="text-2xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                  <%= movie.title %>
                </h3>
              <% end %>
              
              <div class="flex items-center gap-4 mt-2 mb-4 text-sm text-gray-600">
                <% if movie.release_date.present? %>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                    </svg>
                    <%= movie.release_date.year %>
                  </span>
                <% end %>
                <% if movie.runtime.present? %>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    <%= movie.runtime %> min
                  </span>
                <% end %>
                <% if movie.vote_average.present? %>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-500">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                    </svg>
                    <%= number_with_precision(movie.vote_average, precision: 1) %>
                  </span>
                <% end %>
              </div>

              <!-- User's Likes for this Movie -->
              <div class="space-y-3 mt-4">
                <h4 class="text-sm font-semibold text-gray-700 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-pink-500">
                    <path d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
                  </svg>
                  What you liked (<%= pluralize(user_likes.count, 'thing') %>):
                </h4>
                <% user_likes.each do |like| %>
                  <div class="bg-pink-50 rounded-lg p-3 border border-pink-200">
                    <p class="text-gray-900"><%= like.content %></p>
                    <p class="text-xs text-gray-500 mt-1">
                      Added <%= time_ago_in_words(like.created_at) %> ago
                    </p>
                  </div>
                <% end %>
              </div>

              <!-- Action Button -->
              <div class="mt-4">
                <%= link_to movie_path(movie), class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-700" do %>
                  View Movie Details
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 mx-auto text-gray-300 mb-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No liked movies yet</h3>
      <p class="text-gray-600 mb-6">Start sharing what you love about movies</p>
      <%= link_to "Browse Movies", movies_path, class: "inline-flex items-center px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors" %>
    </div>
  <% end %>
</div>
