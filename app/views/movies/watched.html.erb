<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">üé¨ Watched Movies</h1>
        <p class="mt-2 text-sm text-gray-600">Your complete viewing history</p>
      </div>
      
      <!-- Toggle Buttons -->
      <div class="inline-flex rounded-lg border border-gray-200 bg-white p-1 shadow-sm">
        <%= link_to watched_path(sort: 'watch_date'), 
                    class: "px-4 py-2 text-sm font-medium rounded-md transition-colors #{'bg-indigo-600 text-white' if @sort_by == 'watch_date'} #{'text-gray-700 hover:text-gray-900' if @sort_by != 'watch_date'}" do %>
          üìÖ Watch Date
        <% end %>
        <%= link_to watched_path(sort: 'release_year'), 
                    class: "px-4 py-2 text-sm font-medium rounded-md transition-colors #{'bg-indigo-600 text-white' if @sort_by == 'release_year'} #{'text-gray-700 hover:text-gray-900' if @sort_by != 'release_year'}" do %>
          üóìÔ∏è Release Year
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">Unique Movies</div>
      <div class="mt-1 text-3xl font-bold"><%= @total_watched %></div>
    </div>

    <div class="rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">Total Viewings</div>
      <div class="mt-1 text-3xl font-bold"><%= @total_viewings %></div>
    </div>

    <div class="rounded-xl bg-gradient-to-br from-pink-500 to-pink-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">This Month</div>
      <div class="mt-1 text-3xl font-bold"><%= @this_month %></div>
    </div>

    <div class="rounded-xl bg-gradient-to-br from-amber-500 to-amber-600 p-5 text-white shadow-lg">
      <div class="text-sm opacity-90">This Year</div>
      <div class="mt-1 text-3xl font-bold"><%= @this_year %></div>
    </div>
  </div>

  <!-- Viewing History -->
  <% if @viewings.any? %>
    <% @viewings_grouped.each do |group_key, viewings| %>
      <div class="mb-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">
          <% if @sort_by == 'release_year' %>
            <%= group_key %>
            <span class="text-sm font-normal text-gray-500">(<%= pluralize(viewings.count, 'viewing') %>)</span>
          <% else %>
            <%= group_key.strftime('%B %Y') %>
            <span class="text-sm font-normal text-gray-500">(<%= pluralize(viewings.count, 'viewing') %>)</span>
          <% end %>
        </h2>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          <% viewings.each do |viewing| %>
            <% movie = viewing.movie %>
            <%= link_to movie_path(movie), class: "group block" do %>
              <div class="relative">
                <div class="rounded-lg overflow-hidden shadow-md hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                  <% if movie.poster_path.present? %>
                    <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>"
                         alt="<%= movie.title %>"
                         class="w-full aspect-[2/3] object-cover" />
                  <% else %>
                    <div class="w-full aspect-[2/3] bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-gray-400">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <!-- Watched Badge -->
                <div class="absolute top-2 right-2 bg-green-600 text-white rounded-full p-1.5 shadow-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
                    <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
              
              <p class="mt-2 text-sm font-medium text-gray-900 truncate"><%= movie.title %></p>
              <p class="text-xs text-gray-500"><%= viewing.created_at.strftime('%b %d, %Y') %></p>
              <% if movie.release_date.present? %>
                <p class="text-xs text-gray-400">(<%= movie.release_date.year %>)</p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-16">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 mx-auto text-gray-300 mb-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
      </svg>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No movies watched yet</h3>
      <p class="text-gray-600 mb-6">Start watching and marking movies to build your viewing history</p>
      <%= link_to "Browse Movies", movies_path, class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" %>
    </div>
  <% end %>
</div>
