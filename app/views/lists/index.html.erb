<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">My Lists</h1>
    <%= link_to new_list_path, class: "inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition hover:bg-blue-700" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5">
        <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
      </svg>
      Create New List
    <% end %>
  </div>

  <% if @lists.empty? %>
    <div class="text-center py-12">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-16 w-16 mx-auto text-gray-400 mb-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 0 1 0 3.75H5.625a1.875 1.875 0 0 1 0-3.75Z" />
      </svg>
      <p class="text-xl text-gray-600 mb-4">You haven't created any lists yet</p>
      <p class="text-gray-500 mb-6">Create custom lists to organize your favorite movies</p>
      <%= link_to "Create Your First List", new_list_path, class: "inline-flex items-center gap-2 rounded-full bg-blue-600 px-6 py-3 font-medium text-white transition hover:bg-blue-700" %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @lists.each do |list| %>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
          <%= link_to list_path(list), class: "block" do %>
            <div class="p-6">
              <h2 class="text-xl font-bold text-gray-800 mb-2"><%= list.name %></h2>
              <p class="text-gray-600 mb-4 line-clamp-2"><%= list.description.presence || "No description" %></p>
              <div class="flex items-center text-sm text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>
                <%= pluralize(list.movies.count, 'movie') %>
              </div>
            </div>
          <% end %>
          <div class="px-6 pb-4 flex gap-2">
            <%= link_to edit_list_path(list), class: "text-sm text-blue-600 hover:text-blue-800" do %>
              Edit
            <% end %>
            <%= button_to list_path(list), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this list?" }, class: "text-sm text-red-600 hover:text-red-800" do %>
              Delete
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
